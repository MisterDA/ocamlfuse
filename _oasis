# Library
Library Fuse
  Path: lib
  Modules:
    Fuse,
    Fuse_bindings,
    Unix_util
  InternalModules:
    Result,
    Fuse_lib
  BuildDepends: unix, threads, bigarray
  CSources:
    Unix_util_stubs.c,
    Fuse_bindings.h,
    Fuse_bindings_stubs.c,
    Fuse_util.c
  CCLib: -lfuse -L/usr/lib/ocaml -lcamlidl
  CCOpt: -D_FILE_OFFSET_BITS=64 -pthread
  ByteOpt: -linkall
  NativeOpt: -linkall
  XMETADescription: OCaml bindings for FUSE

